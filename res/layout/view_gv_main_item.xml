<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gv_item_selector"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_main_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sjfd" />

    <TextView
        android:id="@+id/tv_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_main_type"
        android:text="手机防盗"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_main_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_main_title"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_main_type"
        android:text="远程定位"
        android:textColor="#838383" 
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>